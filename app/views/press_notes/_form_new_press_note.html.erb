
<div id="form-press-wrapper">
	<div id="progressbar" style="position: fixed; width: 86%; z-index: 2; margin-left: 0.55%; margin-top: -25px;">
		<div class="progress-label">SUBIENDO INFORMACIÓN... ESPERE </div>
	</div>

	<%= form_for press_note, remote: true, html: { id: "form_press", :class => "pure-form pure-form-stacked" } do |f| %>

		<!-- TITULO -->
		<div style="width: 95%; height: auto; margin-top: 2%; position: relative; outline: 1.5px solid #b4b4b4; border-top: 1px solid #fff; padding: 10px;">
			<span style="font-size: 1.3em"><strong>TITULO</strong></span>

			<div id="title-form-div" style="margin-left: 1%;">
				<% if press_note.title_in_es.present? %>
					<%= f.label :title_in_es, "Español: " %>
					<%= f.cktext_area :title_in_es, :ckeditor => { :language => "es", :height => 100 }, :required => true %>
				<% else %>
					<%= f.label :title, "Español: " %>
					<%= f.cktext_area :title, :ckeditor => { :language => "es", :height => 100 }, :required => true %>
				<% end %>
			</div>

			<div id="title-form-div" style="margin-left: 1%;">
				<%= f.label :title_in_en, "Inglés: " %>
				<%= f.cktext_area :title_in_en, :ckeditor => { :language => "es", :height => 100 }, :required => true %>
			</div>			
		</div>

		<!-- FONDO -->
		<div style="width: 95%; height: 105px; margin-top: 2%; position: relative; outline: 1.5px solid #b4b4b4; border-top: 1px solid #fff; padding: 10px;">
			<span style="font-size: 1.3em"><strong>FONDO</strong></span>

			<div style="margin-left: 1%;">
				<%= f.label :background, "Fondo: " %>
				<% if press_note.background.present? %>
					<%= f.file_field :background, :style => "width: 25.5%; font-family: latha, latha_ie; font-size: 0.9em;", :class => "pure-button",
						accept: "image/png,image/gif,image/jpeg" %>
				<% else %>
					<%= f.file_field :background, :style => "width: 25.5%; font-family: latha, latha_ie; font-size: 0.9em;", :class => "pure-button",
						accept: "image/png,image/gif,image/jpeg", :required => true %>
				<% end %>
			</div>
		</div>

		<div style="margin-top: 1.6%; margin-right: 2.6%; float: right;">
			<%= f.submit "GUARDAR INFORMACIÓN", id: "submit_form", :class => "pure-button pure-button-primary" %>
		</div>
		<br>
		<br>
		<br>

	<% end %>
</div>

<script type="text/javascript">
	$(function() {
		// Accion del submit
		$("#form_press").submit(function(e) {
			$("#progressbar").show();
		});

		// ProgressBar
		$("#progressbar").progressbar({
			value: false
		});

		$("#progressbar").hide();
	});
</script>
