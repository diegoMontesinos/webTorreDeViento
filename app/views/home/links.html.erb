
<style type="text/css">
	html {
		width: 100%;
		height: auto;

		position: absolute;
		top: 0;
		left: 0;
		margin: 0;
		padding: 0;

		background: #a3a3a3;
	}

	body {
		width: 100%;
		height: auto;

		position: absolute;
		top: 0;
		left: 0;
		margin: 0;
		padding: 0;

		background: linear-gradient(top , #FFFFFF, #a3a3a3) repeat-x;	
		background: -moz-linear-gradient(top , #FFFFFF , #a3a3a3) repeat-x;
		background: -webkit-linear-gradient(top , #FFFFFF , #a3a3a3)repeat-x;
		background: -ms-linear-gradient(top, #FFFFFF 0%, #a3a3a3 300%) repeat-x;
		background: -o-linear-gradient(#FFFFFF , #a3a3a3);
		background-image: -ms-linear-gradient(top, #FFFFFF, #a3a3a3);
		filter: progid:DXImageTransform.Microsoft.Gradient(startColorstr='#FFFFFF', endColorstr='#a3a3a3');
	}
</style>

<script type="text/javascript">
	function correctLineHeight(elem) {
		$(elem).find("p").each(function() {
			var maxFontSize = 0;

			$(this).find("span").each(function() {
				var currFontSize = parseInt($(this).css('font-size').replace("px", "")) ;
				if(maxFontSize < currFontSize) {
					maxFontSize = currFontSize;
				}
			});

			if(maxFontSize == 0) {
				$(this).css("line-height", "1em");
			} else {
				$(this).css("line-height", maxFontSize + "px");
			}
		});
	}

	$(document).ready(function() {
		$("#links-body-txt").bind("jsp-initialised", function(event, isScrollable) {
			correctLineHeight($("#links-body-txt")[0]);
		}).jScrollPane({
			autoReinitialise: true,
			hideFocus: true
		});
	});

</script>

<div id="wrapper-tvp" align="center">
	<div id="container-tvp" align="left">

		<!-- BANNER TVP -->
		<div id="banner-tvp" >
			<%= render partial: "shared/banner_tvp", locals: { :bco => false } %>
		</div>

		<!-- MENU TVP -->
		<div style="margin-top: 25px;">
			<%= render partial: "shared/menu_tvp" %>
		</div>

		<!-- WRAPPER -->
		<div id="links-wrapper">

			<!-- 2px blancos -->
			<div style="width: 100%; height: 2px; position: relative; float: left; background: #FFF;"></div>

			<!-- CONTENIDO -->
			<div id="links-content">
				<!-- FONDO -->
				<% if @links.image.present? %>
					<% photo_src = @links.image.url(:display) %>
				<% else %>
					<% photo_src = "info_default.png" %>
				<% end %>

				<div id="links-image"><%= image_tag photo_src, :style => "width: 100%; height: 100%;" %></div>

				<div id="links-text">
					<span style="font-family: felixti, felixti_ie; font-size: 1.5em; color: #FFF;">LINKS</span>

					<div id="links-body-txt">
						<%= @links.body.html_safe %>
					</div>
				</div>
			</div>

			<!-- 2px blancos -->
			<div style="width: 100%; height: 2px; position: relative; float: left; background: #FFF;"></div>

			<!-- FRANJA NEGRA -->
			<div style="width: 100%; height: 40px; position: relative; float: left; background: #000;"></div>
		</div>		

		<!-- LEGALES -->
		<div id="legals-tvp">
			<%= render partial: "shared/legals_tvp", locals: { :bco => false } %>
		</div>

	</div>
</div>
